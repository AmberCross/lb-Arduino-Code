/////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Digio bit control
// Can access each of the bits by chip (0-7) and port (0-15) or by board level port (0-127).
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////

#include "DIGIO128TESTER-DEFS.h"
#include "LandBoards_Digio128.h"

////////////////////////////////////////////////////////////////////////////////
// Initialize the DIGIO-128 card
////////////////////////////////////////////////////////////////////////////////

void initDigio128(void) // Initialize the card
{
  for (uint8_t pinNum = 0; pinNum < 128; pinNum++)
    Dio128.pinMode(pinNum, INPUT);
}

